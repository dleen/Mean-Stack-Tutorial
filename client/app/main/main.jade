.row
  .col-md-6.col-md-offset-3
    .page-header
      h1 Flapper News
    div(ng-repeat="post in posts | orderBy: '-upvotes'")
      span(class="glyphicon glyphicon-thumbs-up"
           ng-click="incrementUpvotes(post)") {{post.upvotes}}
      span(style="font-size: 20px; margin-left: 10px")
        a(ng-show="post.link" href="{{post.link}}") {{post.title}}
        a(href="/posts/{{post._id}}") Comments
        span(ng-hide="post.link") {{post.title}}

    form(style="margin-top: 30px" ng-submit="addPost(data)")
      h3 Add a new post!
      .form-group
        input(type="text" placeholder="Title" ng-model="data.title").form-control
      .form-group
        input(type="text" placeholder="Link" ng-model="data.link").form-control
      button(type="submit").btn.btn-primary Post
